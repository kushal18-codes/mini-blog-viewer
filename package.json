{
  "name": "mini-blog-viewer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.app.json && vite build",
    "lint": "npx ultracite lint",
    "format": "npx ultracite format",
    "preview": "vite preview",
    "test": "vitest run src --environment jsdom",
    "test:coverage": "vitest run src --environment jsdom --coverage",
    "test:ui": "vitest src --environment jsdom --ui",
    "test:watch": "vitest src --environment jsdom"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/react-query": "^5.81.2",
    "lucide-react": "^0.523.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "canvas": "^3.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.2",
    "typescript": "~5.8.3",
    "ultracite": "5.0.12",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  }
}
